-        case C_DESKTOP_MEDIA_KEY_MIC_MUTE:
-                new_muted = !old_muted;
-                break;
-        case C_DESKTOP_MEDIA_KEY_VOLUME_DOWN:
-                if (old_vol <= norm_vol_step) {
